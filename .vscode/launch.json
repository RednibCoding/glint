{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/glint.js",
            "args": ["--watch"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/example",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "preLaunchTask": "Kill Dev Server"
        },
        {
            "name": "Build",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/glint.js",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/example",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}