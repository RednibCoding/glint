{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Glint Project",
            "type": "shell",
            "command": "node",
            "args": ["glint.js"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Glint Dev Server",
            "type": "shell",
            "command": "node",
            "args": ["glint.js", "--watch"],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "ðŸš€ Glint v2.0 - Building JSX Components...",
                        "endsPattern": "ðŸ”¥ Glint dev server running at http://localhost:3000/"
                    }
                }
            ]
        },
        {
            "label": "Open Glint Dev Server",
            "type": "shell",
            "command": "python3",
            "args": ["-c", "import webbrowser; webbrowser.open('http://localhost:3000')"],
            "group": "test",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Start Glint Dev Server"
        },
        {
            "label": "Build and Serve",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Start Glint Dev Server",
                "Open Glint Dev Server"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}