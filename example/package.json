  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.5.3",
    "ws": "^8.14.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RednibCoding/glint"
  },
  "glint": {
    "version": "2.0.0",
    "structure": {
      "src": "Source files directory (required)",
      "src/index.html": "Main entry point (required)",
      "src/**/*.glint.js": "Component files (flexible organization)",
      "build": "Generated output directory"
